@page
@model FAiSEAdmin.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Tạo mới Người dùng";
}

<header class="panel-heading">
    Tạo mới Người dùng
</header>
<div class="processing-preview hidden">
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-lg-12 ">
            <form method="post" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label">Tên đầy đủ</label>
                    <div class="col-lg-6">
                        <input asp-for="User.FullName" class="form-control" />
                        <span asp-validation-for="User.FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label">Thư điện tử</label>
                    <div class="col-lg-6">
                        <input asp-for="User.Mail" class="form-control" />
                        <span asp-validation-for="User.Mail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group icheck minimal-blue">
                    <label class="col-lg-2 col-sm-2 control-label">&nbsp;</label>
                    <div class="">
                        <div class="checkbox single-row ">
                            <input class="form-check-input" asp-for="User.Status" /> Trạng thái hoạt động
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label">&nbsp;</label>
                    <div class="col-lg-6">
                        <a asp-page="Index" class="btn btn-success">Trở về</a>&nbsp;
                        <input type="submit" value="Tạo mới" onclick="return DisplayProgressMessage(this, 'Đang cập nhật...');" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi tạo dữ liệu!',
                text: '@Html.Raw(TempData["ErrorMessage"])',
            });
        </script>
    }
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/loading.js"></script>
}
